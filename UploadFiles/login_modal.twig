                fill="transparent" />
        </svg>
    <div class="loading__animated">
        <img src="https://cdn.discordapp.com/attachments/455777545485549589/785783911585284106/tail-spin.svg" width="64px">
    </div>
</div>
    <div class="login-panel">
        <p class="login-title">{{ theme_configuration.lang.steam_login }}</p>
        <p class="login-description">{{ theme_configuration.lang.steam_aff }}</p>
        <form method="post" action="/login">
            <div class="username">
                <div class="triplezone-login">
                    <div id="IGN_MC" style="display: none;">
                        <img src="https://cravatar.eu/helmavatar/MHF_Question/32.png" alt="" id="avatar_MC">
                        <input type="text" name="ign" id="mc_IGN_INPUT" autocomplete="off">
                    </div>
                    <a href="https://ident.tebex.io/steam?return={{ url() }}?ign=" class="steam__login">{{ theme_configuration.lang.steam_click_to_login_in }}</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endif %}
